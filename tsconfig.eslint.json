{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "include": [
    "src/**/*",
    "bin/*",
    "test/*"
  ],
  "exclude": ["node_modules"]
}
